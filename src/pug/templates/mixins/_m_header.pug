mixin header
	header.header
		.header__wrapper
			.header_in
				.header__body
					a.header__logo(href="/index.html")
						img.header__logo_img(src="images/logo.svg", alt="Logo")
					.header__menu.menu
						.menu__wrapper
							.menu__icon.iconMenu
								span.menu__icon_in 
							span.menu__icon_label Menu
						nav.menu__body
							ul.menu__list 
								li.menu__item 
									a.menu__link(href="#") Home
								li.menu__item 
									a.menu__link(href="#") About
								li.menu__item 
									a.menu__link(href="#") Products
								li.menu__item 
									a.menu__link(href="#") Contacts